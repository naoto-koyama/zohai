#!/usr/bin/env ruby
require 'fileutils'
include FileUtils

APP_ROOT = File.expand_path('..', __dir__)

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

chdir APP_ROOT do
  system! 'bin/rails r db/seeds/brands.rb'
  system! 'bin/rails r db/seeds/fiscal_years.rb'
end
